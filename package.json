{
  "name": "FireOne",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "0.0.1",
  "description": "FireStack Extension In One",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build:ts": "yarn packages:clean && tsc -b tsconfig.json",
    "build:contentScript":"cd packages/fireone-contentscript && yarn build",
    "build:background":"cd packages/fireone-background && yarn build",
    "build:inpage":"cd packages/fireone-inpage && yarn build",
    "build:popup":"cd packages/fireone-ui/popup && yarn build",
    "build:flow":"yarn build:ts && yarn build:contentScript && yarn build:background && yarn build:inpage && yarn build:popup",
    "packages:cleanUnexpected": "gulp cleanUnexpected",
    "packages:clean": "gulp cleanServer && yarn packages:cleanUnexpected"

  },
  "author": "neeboo@firestack.one",
  "license": "MIT",
  "dependencies": {
    "@fireone/api": "0.0.1",
    "webextension-polyfill-ts": "^0.9.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.0",
    "@babel/plugin-transform-runtime": "^7.5.0",
    "@babel/preset-env": "^7.5.3",
    "@babel/runtime": "^7.5.4",
    "@types/base-x": "^3.0.0",
    "@types/bip39": "^2.4.2",
    "@types/bn.js": "^4.11.3",
    "@types/camelcase": "^4.1.0",
    "@types/chrome": "^0.0.88",
    "@types/fancy-log": "^1.3.0",
    "@types/glob": "^7.1.1",
    "@types/glob-parent": "^3.1.0",
    "@types/hdkey": "^0.7.0",
    "@types/jest": "^23.3.1",
    "@types/jest-json-schema": "^1.2.0",
    "@types/node": "^10.5.6",
    "@types/pbkdf2": "^3.0.0",
    "@types/uuid": "^3.4.4",
    "@types/valid-url": "^1.0.2",
    "@types/webpack": "^4.4.17",
    "@types/websocket": "^0.0.40",
    "babel-loader": "^8.0.6",
    "del": "^5.0.0",
    "gulp": "^4.0.2",
    "lerna": "^3.16.4",
    "rollup": "^0.66.6",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-jsdoc": "^0.1.1",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-license": "^0.8.1",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-typescript2": "^0.17.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.3.6",
    "webpack-command": "^0.4.1",
    "webpack-node-externals": "^1.7.2"
  }
}
